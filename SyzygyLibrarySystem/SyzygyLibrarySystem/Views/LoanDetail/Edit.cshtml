@model LoanDetailModel

@{
    ViewData["Title"] = "Edición de Detalle Préstamo";
}

<h1 style="text-align:center">Edición de Detalle Préstamo</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit" onsubmit="return confirmAction();">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <input asp-for="DetailId" type="hidden" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="LoanId" class="form-label">Préstamo ID</label>
                    <input asp-for="LoanId" type="text" class="form-control" />
                    <span asp-validation-for="LoanId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="BookId" class="form-label">Libro</label>
                    <select asp-for="BookId"
                            asp-items="@ViewBag.Books"
                            class="form-select">
                        <option value="">Seleccione</option>
                    </select>
                    <span asp-validation-for="BookId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">Cantidad</label>
                    <div class="input-group">
                        <input asp-for="Quantity" type="number" class="form-control" min="1" />
                        <button type="button" class="btn btn-secondary" onclick="increment()">+</button>
                        <button type="button" class="btn btn-secondary" onclick="decrement()">-</button>
                    </div>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />

                    <a asp-action="Index" class="btn btn-danger">Regresar al listado</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function confirmAction() {
            if (confirm('¿Estás seguro de editar este libro al detalle de préstamo?')) {
                return true;
            } else {
                window.location.href = '@Url.Action("Index", "LoanDetail")';
                return false;
            }
        }
        function increment() {
            var input = document.getElementById('Quantity');
            var currentValue = parseInt(input.value);
            input.value = currentValue + 1;
        }

        function decrement() {
            var input = document.getElementById('Quantity');
            var currentValue = parseInt(input.value);
            if (currentValue > 1) {
                input.value = currentValue - 1;
            }
        }
    </script>
}
